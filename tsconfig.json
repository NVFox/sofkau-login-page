{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/server/*"]
      },
      "outDir": "./dist/server",
      "esModuleInterop": true,
      "allowJs": true,
      "skipLibCheck": true,
    },
    "include": ["src/server/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}